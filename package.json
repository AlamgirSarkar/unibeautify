{
  "name": "unibeautify",
  "version": "0.1.6",
  "description": "One Beautifier to rule them all",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "ava": "ava --verbose dist/test",
    "test": "npm-run-all compile:ts ava",
    "dev": "tsc --watch",
    "compile:ts": "tsc",
    "compile": "npm-run-all compile:ts update-type-defs",
    "clean": "rimraf dist/",
    "prepublish": "npm-run-all compile",
    "docs": "typedoc --out docs --includeDeclarations typings/*.ts --module commonjs dist/src",
    "lint": "tslint {src,test,script}/**/*.ts",
    "lint-fix": "tslint --fix {src,test,script}/**/*.ts",
    "update-type-defs": "node dist/scripts/update-type-defs.js dist/src/beautifier.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Unibeautify/unibeautify.git"
  },
  "keywords": [
    "beautify",
    "beautifier",
    "format",
    "formatter",
    "prettify",
    "pretty"
  ],
  "author": {
    "name": "Glavin Wiechert",
    "email": "glavin.wiechert@gmail.com",
    "url": "https://github.com/glavin001"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Unibeautify/unibeautify/issues"
  },
  "homepage": "https://github.com/Unibeautify/unibeautify#readme",
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/json-stable-stringify": "^1.0.31",
    "@types/lodash": "^4.14.71",
    "@types/node": "^8.0.19",
    "ava": "^0.16.0",
    "json-stable-stringify": "^1.0.1",
    "npm-run-all": "^3.0.0",
    "rimraf": "^2.5.4",
    "tslint": "^5.7.0",
    "tslint-clean-code": "^0.1.3",
    "tslint-microsoft-contrib": "^5.0.1",
    "typedoc": "^0.4.5",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "bluebird": "^3.4.3",
    "lodash": "^4.15.0"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
